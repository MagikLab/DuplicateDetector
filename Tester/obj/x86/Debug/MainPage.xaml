<Page
    x:Class="Tester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--Use a collection view source for content that presents a list of items that can be grouped or sorted.-->
        <CollectionViewSource x:ConnectionId='1' x:Key="cvs" x:Name="cvs" IsSourceGrouped="True" />
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Button x:ConnectionId='2' x:Name="btnChooseFolder" 
                Content="Choose Folder" 
                HorizontalAlignment="Left"
                Margin="10,37,0,0" 
                VerticalAlignment="Top"
                                             />
        <Button x:ConnectionId='3' x:Name="btnExecute" 
                Content="Execute" 
                HorizontalAlignment="Left" 
                Margin="158,37,0,0" 
                VerticalAlignment="Top"
                                        />
        <Button x:ConnectionId='4' x:Name="btnDetectOrigin" 
                Content="Detect Origin" 
                HorizontalAlignment="Left" 
                Margin="258,37,0,0" 
                VerticalAlignment="Top"
                                             />
        <TextBlock x:ConnectionId='5' x:Name="tblProgress" 
                   Width="50"
                   Height="30"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="395,36,195,0"/>
        <TextBlock x:ConnectionId='6' x:Name="tblTotalFiles" 
                   Width="50"
                   Height="30"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="451,36,139,0"/>
        <Grid HorizontalAlignment="Left" 
              Margin="10,74,0,0" 
              VerticalAlignment="Top">
            <ListView x:ConnectionId='7' x:Name="lvDuplicate"
                      ItemsSource="{Binding Source={StaticResource cvs}}"
                      SelectionMode="Multiple"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10,0,20">
                            <TextBlock Text="{Binding Path=Name}" />
                            <TextBlock>
                            <Run Text="{Binding Path=Size}"/>
                            <Run Text=" bytes"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Path=Hash}" />
                            <TextBlock Text="{Binding Path=Path}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                <ListView.GroupStyle>
                    <GroupStyle >
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </Grid>

    </Grid>
</Page>

